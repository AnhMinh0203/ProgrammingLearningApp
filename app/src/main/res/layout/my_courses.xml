<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bottom_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_f8" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Tìm kiếm..."
            />

        <ImageView
            android:id="@+id/imageAccount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/menu_infor_personal" />

    </LinearLayout>

    <!--    // HTML-->

    <TextView
        android:id="@+id/textMyCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="100dp"
        android:text="Khóa học của tôi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageHTML_CSS"
        android:layout_width="134dp"
        android:layout_height="113dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/html_css"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    // JavaScript-->

    <TextView
        android:id="@+id/textHTML_CSS"
        android:layout_width="134dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="HTMT, CSS từ Zero đến Hero"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageHTML_CSS" />

    <ImageView
        android:id="@+id/imageJavascript"
        android:layout_width="134dp"
        android:layout_height="113dp"
        android:layout_marginTop="160dp"
        android:src="@drawable/javascript"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textJavascript"
        android:layout_width="134dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="Javascipt cơ bản"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageJavascript" />

<!--    ReactJS-->

    <ImageView
        android:id="@+id/imageReactJS"
        android:layout_width="134dp"
        android:layout_height="113dp"
        android:layout_marginTop="356dp"
        android:src="@drawable/reactjs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    NodeJs-->

    <TextView
        android:id="@+id/textReactJS"
        android:layout_width="134dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:maxLines="2"
        android:text="Lập trình website với ReactJS"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageReactJS" />

    <ImageView
        android:id="@+id/imageNodeJs"
        android:layout_width="134dp"
        android:layout_height="113dp"
        android:layout_marginTop="356dp"
        android:src="@drawable/nodejs"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textNodeJs"
        android:layout_width="134dp"
        android:layout_height="19dp"
        android:layout_marginTop="12dp"
        android:text="NodeJS &amp; Express"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.85"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageNodeJs" />

    <!--    Fotter-->
    

</androidx.constraintlayout.widget.ConstraintLayout>