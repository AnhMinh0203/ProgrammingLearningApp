<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
        android:id="@+id/navbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp"
        android:background="@drawable/bottom_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:elevation="4dp">

        <ImageView
            android:id="@+id/imageLogo"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/logo_f8" />

        <SearchView
            android:id="@+id/searchView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:iconifiedByDefault="false"
            android:queryHint="Tìm kiếm..."
            />

        <ImageView
            android:id="@+id/imageAccount"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_gravity="center"
            android:src="@drawable/menu_infor_personal" />

    </LinearLayout>

    <TextView
        android:id="@+id/textMyCourses"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"
        android:text="Khóa học của tôi"
        android:textColor="#000000"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    // HTML-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:background="@drawable/border_radius_courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageHTML_CSS"
            android:layout_width="134dp"
            android:layout_height="113dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/html_css" />

        <TextView
            android:id="@+id/textHTML_CSS"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text="HTMT, CSS từ Zero đến Hero"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

<!--    Javascript-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="140dp"
        android:orientation="vertical"
        android:background="@drawable/border_radius_courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageJavascript"
            android:layout_width="134dp"
            android:layout_height="113dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/responsive" />

        <TextView
            android:id="@+id/textJavascript"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text="Responsive với Grid System"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

    <!--    ReactJS-->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="348dp"
        android:orientation="vertical"
        android:background="@drawable/border_radius_courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.14"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageReactJS"
            android:layout_width="134dp"
            android:layout_height="113dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/reactjs" />

        <TextView
            android:id="@+id/textReactJS"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text="Lập trình website với ReactJS"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>

    <!--    NodeJS-->

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="348dp"
        android:orientation="vertical"
        android:background="@drawable/border_radius_courses"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.851"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageNodeJS"
            android:layout_width="134dp"
            android:layout_height="113dp"
            android:layout_marginTop="-8dp"
            android:src="@drawable/nodejs" />

        <TextView
            android:id="@+id/textNodeJS"
            android:layout_width="134dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:maxLines="2"
            android:text="Lập trình với NodeJS &amp; ExpressJS"
            android:textAlignment="center"
            android:textColor="#000000" />
    </LinearLayout>


    <!--    Fotter-->


</androidx.constraintlayout.widget.ConstraintLayout>