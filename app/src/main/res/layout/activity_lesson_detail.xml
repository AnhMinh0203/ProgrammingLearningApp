<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.lesson.lessonDetail">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">
        <!-- res/layout/activity_lesson_detail.xml -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Hiển thị Title -->
            <TextView
                android:id="@+id/tvLessonTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="24sp"
                android:textStyle="bold" />

            <!-- Hiển thị Content -->
            <TextView
                android:id="@+id/tvLessonContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Content"
                android:textSize="18sp" />

            <!--        &lt;!&ndash; Hiển thị Quiz bằng RecyclerView &ndash;&gt;-->

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvQuiz"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp" />

            <!-- Button layout for Previous and Next Lesson -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="24dp"
                android:gravity="center">

                <Button
                    android:id="@+id/btnPreviousLesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bài trước"
                    android:layout_weight="1"
                    android:layout_marginEnd="8dp" />

                <Button
                    android:id="@+id/btnNextLesson"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:text="Bài tiếp"
                    android:layout_weight="1"
                    android:layout_marginStart="8dp" />

            </LinearLayout>
            <!-- Nút Update Lesson và Delete Lesson -->
            <Button
                android:id="@+id/btnUpdateLesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Update"
                android:layout_marginTop="16dp"
                android:backgroundTint="@color/primary_button" />

            <Button
                android:id="@+id/btnDeleteLesson"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:layout_marginTop="8dp"
                android:backgroundTint="@color/primary_button" />

        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>