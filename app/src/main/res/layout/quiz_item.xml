<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginTop="16dp">

    <!-- Phần nhập câu hỏi -->
    <EditText
        android:id="@+id/quizQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Câu hỏi"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <!-- Phần nhập các đáp án -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Đáp án" />

    <EditText
        android:id="@+id/answer1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án 1"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/answer2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án 2"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/answer3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án 3"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <EditText
        android:id="@+id/answer4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Đáp án 4"
        android:layout_marginTop="8dp"
        android:inputType="text" />

    <!-- Chọn đáp án đúng bằng RadioButton -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Chọn đáp án đúng"
        android:layout_marginTop="16dp" />

    <RadioGroup
        android:id="@+id/correctAnswerGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/correctAnswer1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án 1" />

        <RadioButton
            android:id="@+id/correctAnswer2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án 2" />

        <RadioButton
            android:id="@+id/correctAnswer3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án 3" />

        <RadioButton
            android:id="@+id/correctAnswer4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đáp án 4" />

    </RadioGroup>

</LinearLayout>
