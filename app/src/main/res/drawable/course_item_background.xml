<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color (can be adjusted) -->
    <solid android:color="#FFFFFF"/>

    <!-- Rounded corners -->
    <corners android:radius="16dp"/>

    <!-- Optional: Border around the course item -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD"/> <!-- Border color -->

    <!-- Optional: Padding inside the item -->
    <padding
        android:left="8dp"
        android:right="8dp"
        android:top="8dp"
        android:bottom="8dp"/>
</shape>
